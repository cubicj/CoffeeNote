<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    >

    <TextView
        android:id="@+id/tv_recipe_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="날짜"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_recipe_hotorice"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_date"
        app:layout_constraintVertical_bias="0.538"
        app:srcCompat="@drawable/hot" />

    <TextView
        android:id="@+id/tv_recipe_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="점수"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_drink_person"
        app:layout_constraintEnd_toStartOf="@+id/iv_recipe_hotorice"
        app:layout_constraintTop_toTopOf="@+id/tv_drink_person" />

    <TextView
        android:id="@+id/tv_drink_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:text="마신 사람"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_date"
        app:layout_constraintStart_toEndOf="@+id/tv_recipe_date"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_date" />

</androidx.constraintlayout.widget.ConstraintLayout>